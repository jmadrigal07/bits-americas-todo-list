{
  "name": "todo-list-api",
  "version": "1.0.0",
  "description": "Todo list api",
  "main": "src/index.js",
  "author": "Jorge Madrigal",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0",
    "yarn": ">=1.13.0"
  },
  "dependencies": {
    "babel-node": "^0.0.1-security",
    "babel-polyfill": "^6.26.0",
